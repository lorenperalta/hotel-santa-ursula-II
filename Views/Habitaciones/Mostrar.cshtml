</svg></a>
    </form>
  </div>
</nav>
<br>
<br>
<!-------------------------------------------------------------------->

  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="250" height="180"
                       src="@item.Imagen" alt="@item.Imagen"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.numero)</h5>
                  
                  <p class="card-text">@Html.DisplayFor(modelItem => item.precio)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Estado)</p>
                  @if (item.Estado =="Ocupado" || item.Estado =="Reservado")
                  {
                      <p class="btn btn-secondary">No disponible</p>
                  }
                  else{
                     <a class="btn btn-warning" asp-action="Seleccionar" asp-route-id="@item.id" onclick="return confirm('RESERVA AGREGADA ? : @item.id ')">Reservar</a>
                  }
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>
  </body>