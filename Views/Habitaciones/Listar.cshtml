@model IEnumerable<hotel_santa_ursula_II.Models.Habitaciones>
    
@{
   var count = 1;
}
<head>
   <script src="https://kit.fontawesome.com/c239d89a06.js" crossorigin="anonymous"></script>      
</head>

<body>
    <!--Inicio Banner-->
<div class="hero-wrap hero-wrap-2" style="background-image: url('../images/banner1.jpg'); background-attachment:fixed; height: 200px;">
      <div class="overlay" style="height: 200px;" ></div>
        <div class="container">
          <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true" style="height: 200px;">
           <div class="col-md-8 ftco-animate text-center">          
             <h1 class="mb-3 bread">Lista de Habitaciones</h1>
            </div>
          </div>
       </div>
</div>    
<br>
<br>
<!--Fin Banner-->
<div class="container">    
    <p id="hora"></p>
    <!--<a class="btn btn-success float-right" role="button" asp-action="index">Registrar</a><br>-->
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                    <th scope="col">
                        â„–
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.numero)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.precio)
                    </th> 
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.descripcion)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.nivel)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Imagen)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.tipoHabitacion)
                    </th>
                    <th></th>
            </tr>
        </thead>

        <!-- actualizar la db para que lea las lineas de abajo -->
            <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @count
                </th>
                <td>
                    H - @Html.DisplayFor(modelItem => item.numero)
                </td>
                <td>
                    S/. @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                   @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.descripcion))

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <img class="img-responsive" width="200" height="150"
                       src="@item.Imagen" alt="@item.Imagen"  />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipoHabitacion.id)
                </td>
                
                
                <th scope="row">
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-outline-success" role="button">Editar</a> 
                </th>
            </tr>
            count++;
        }        
       
    
        </tbody> 
    </table>
</div>
</body>
