@model hotel_santa_ursula_II.Models.Pago
@{
    ViewData["Title"] = "Pago";
}

<h1>@ViewData["Title"]</h1>
<div class="col-lg-6" style="float:none;margin:auto;">
    <div class="alert alert-success" role="alert">@ViewData["Message"]</div>
    <h3>Ingresa tus datos</h3>

    
           <form asp-controller="Pago" asp-action="Pagar">
              
                <input type="hidden" asp-for="UserID"/>
                
                <label asp-for="NombreTarjeta" class="control-label">Nombre en la Tarjeta</label>
                <input asp-for="NombreTarjeta" class="form-control rounded-pill bg-secondary text-white" />
                <br>
                <label asp-for="NumeroTarjeta" class="control-label">Número de Tarjeta</label>
                <input asp-for="NumeroTarjeta" class="form-control rounded-pill bg-secondary text-white" data-inputmask="'mask': '9999-9999-9999-9999'" />
                <br>
                <label asp-for="DueDateYYMM" class="control-label">Fecha de Vencimiento</label>
                <input asp-for="DueDateYYMM" class="form-control rounded-pill bg-secondary text-white" data-inputmask="'mask': '99/99', 'placeholder': 'yy/mm'" />
                <br>
                <label asp-for="Cvv" class="control-label">Código CVV</label>
                <input asp-for="Cvv" class="form-control rounded-pill bg-secondary text-white" data-inputmask="'mask': '999', 'placeholder': '999'" />
                <br>
                <label asp-for="MontoTotal" class="control-label">Monto Total</label>
                <input asp-for="MontoTotal" class="form-control rounded-pill bg-secondary text-white" data-thousands="," data-decimal="." readonly />
                <br>
                <div class="form-group">
                  <button type="submit" class="btn rounded-pill btn-dark btn-block">Pagar</button> 
                </div>
                
            </form>