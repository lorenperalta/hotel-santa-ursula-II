@model IEnumerable<hotel_santa_ursula_II.Models.Reclamaciones>
@{
    var count = 1;
}
<div class="container">
    <br>
    <h2>Reclamos</h2>
    <p id="hora"></p>
    <a class="btn btn-success float-right" role="button" asp-action="Crear">Registrar</a><br>
    <br><table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                    <th scope="col">
                        â„–
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Dni)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombres)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.N_Celular)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Correo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Reclamo)
                    </th>
                    
            </tr>
        </thead>

        <!-- actualizar la db para que lea las lineas de abajo -->
            <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @count
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.N_Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reclamo)
                </td>
                
                
                <th scope="row">
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-success active" role="button">Editar</a> 
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-success active" role="button" onclick="return confirm('Esta seguro que desea eliminar? : @item.id ')">Eliminar</a>
                </th>
            </tr>
            count++;
        }        
        </tbody> 
    </table>
</div>

