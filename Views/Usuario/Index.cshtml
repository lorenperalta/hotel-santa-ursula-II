@model hotel_santa_ursula_II.Models.Usuario
@{
    ViewData["Title"] = "Usuario";
}
<head> 
    <link rel="stylesheet" href="~/css/Formularios.css" />
   <script src="https://kit.fontawesome.com/c239d89a06.js" crossorigin="anonymous"></script>      
</head>

<body>
<!--Inicio Banner-->
<div class="hero-wrap hero-wrap-2" style="background-image: url('images/banner1.jpg'); background-attachment:fixed; height: 200px;">
      <div class="overlay" style="height: 200px;" ></div>
        <div class="container">
          <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true" style="height: 200px;">
           <div class="col-md-8 ftco-animate text-center">          
             <h1 class="mb-3 bread">Registrar Usuario</h1>
            </div>
          </div>
       </div>
</div>    
<br>
<br>
<!--Fin Banner-->

<div class="alert alert-success" role="alert">@ViewData["Message"]</div>  

<div class="container formulario">  

    <form  asp-controller="Usuario" asp-action="Registrar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
         <div class="row align-items-center">
                <div class="form-group text-left col-sm">                
                    <label asp-for="nombres" class="control-label"></label>
                    <input asp-for="nombres" class="form-control rounded-pill"> 
                    <span asp-validation-for="nombres" class="text-danger"></span>
                </div>
                <div class="form-group text-left col-sm">                
                    <label asp-for="apellidos" class="control-label"></label>
                    <input asp-for="apellidos" class="form-control rounded-pill"> 
                    <span asp-validation-for="apellidos" class="text-danger"></span>
                </div>
           </div>
           <div class="row align-items-center">
                <div class="form-group  text-left col-sm">
                    <label asp-for="dni" class="control-label"></label>
                    <input asp-for="dni" class="form-control rounded-pill"> 
                    <span asp-validation-for="dni" class="text-danger"></span>
                </div>
                <div class="form-group text-left col-sm">
                  <label asp-for="direccion" class="control-label"></label>
                  <input asp-for="direccion" class="form-control rounded-pill"> 
                  <span asp-validation-for="direccion" class="text-danger"></span>
                </div>            
           </div>     
           <div class="row align-items-center">     
                <div class="form-group text-left col-sm">
                    <label asp-for="telefono" class="control-label"></label>
                    <input asp-for="telefono" class="form-control rounded-pill"> 
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
                <div class="form-group text-left col-sm">
                    <label asp-for="correo" class="control-label"></label>
                    <input asp-for="correo" class="form-control rounded-pill"> 
                    <span asp-validation-for="correo" class="text-danger"></span>
                </div>
            </div>  

            <div class="row align-items-center">                
                <div class="form-group col-sm">
                    <button class="button">Registrar</button>
                </div>
            </div>
        </form>    
</div>
</body>