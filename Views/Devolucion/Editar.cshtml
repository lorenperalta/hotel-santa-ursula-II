@model hotel_santa_ursula_II.Models.Devolucion
@{
    ViewData["Title"] = "Usuario";
}
<head>  
   <script src="https://kit.fontawesome.com/c239d89a06.js" crossorigin="anonymous"></script>      
</head>

<body>
    <!--Inicio Banner-->
<div class="hero-wrap hero-wrap-2" style="background-image: url('images/banner1.jpg'); background-attachment:fixed; height: 200px;">
      <div class="overlay" style="height: 200px;" ></div>
        <div class="container">
          <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true" style="height: 200px;">
           <div class="col-md-8 ftco-animate text-center">          
             <h1 class="mb-3 bread">Devolucion</h1>
            </div>
          </div>
       </div>
</div>    
<br>
<br>
<!--Fin Banner-->

<div class="container formulario">

    <div class="col-md-4">
        <form asp-controller="Devolucion" asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-left">
                <label asp-for="nombres" class="control-label"></label>
                <input asp-for="nombres" class="form-control" readonly>
                <span asp-validation-for="nombres" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="apellidos" class="control-label"></label>
                <input asp-for="apellidos" class="form-control" readonly>
                <span asp-validation-for="apellidos" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="dni" class="control-label"></label>
                <input asp-for="dni" class="form-control" readonly>
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>

            <div class="form-group text-left">
                <label asp-for="motivo" class="control-label"></label>
                <input asp-for="motivo" class="form-control" readonly>
                <span asp-validation-for="motivo" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="numero" class="control-label"></label>
                <input asp-for="numero" class="form-control" readonly>
                <span asp-validation-for="numero" class="text-danger"></span>
            </div>
            <div class="form-group text-left col-sm">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control rounded-pill" aria-label="Default select example">
                <option value="Aceptado">Aceptado</option>
                <option value="Rechazado">Rechazado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success button">Guardar</button>
            </div>
        </form>
    </div>
</div>
</body>